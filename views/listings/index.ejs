<% layout("/layouts/boilerplate") -%>

<% if (success) { %>
  <div class="alert alert-success">
    <%= success %>
  </div>
<% } %>

<h3>All Listings</h3>

<!-- Uncomment if needed later -->
<!--
<form method="GET" action="/listings/new">
  <button type="submit">Create New Listing</button>
</form>
-->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

  <% if (allListings && allListings.length > 0) { %>
    <% allListings.forEach(listing => { %>
      <div class="col mb-4">
        <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none; color: inherit;">
          <div class="card listing-card" style="width: 18rem;">
            <img src="<%= listing.image && listing.image.url ? listing.image.url : '/default.jpg' %>" class="card-img-top listing_img" alt="listing image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <%= listing.title %> <br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
              </p>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <li>No listings found</li>
  <% } %>

</div>