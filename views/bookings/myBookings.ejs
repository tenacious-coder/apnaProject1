<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="mb-4 fw-bold">My Bookings</h2>

  <% if (bookings.length === 0) { %>
    <div class="alert alert-info text-center py-4 rounded-4 shadow-sm">
      <i class="bi bi-info-circle me-2"></i>You have no bookings yet.
    </div>
  <% } else { %>
    <div class="row g-4">
      <% bookings.forEach(booking => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card border-0 shadow-sm h-100 rounded-4">
            <div class="card-body">
              <h5 class="card-title text-success mb-3">
                <i class="bi bi-house-door me-2"></i><%= booking.listing.title %>
              </h5>

              <p class="mb-1"><strong>Check-in:</strong> <%= booking.checkIn.toDateString() %></p>
              <p class="mb-1"><strong>Check-out:</strong> <%= booking.checkOut.toDateString() %></p>
              <p class="mb-1"><strong>Total Price:</strong> $<%= booking.totalPrice %></p>
              <p class="mb-0 text-muted"><strong>Location:</strong> <%= booking.listing.location %></p>
            </div>

            <div class="card-footer bg-white border-0 d-flex justify-content-between">
              <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary btn-sm px-3">
                View Listing
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>